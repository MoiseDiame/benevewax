<div id="detailCarousel" class="carousel slide carousel-dark" data-bs-ride="true">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#detailCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		{% if article.otherPic1 %}
			<button type="button" data-bs-target="#detailCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
		{% endif %}
		{% if article.otherPic2 %}
			<button type="button" data-bs-target="#detailCarousel" data-bs-slide-to="1" aria-label="Slide 3"></button>
		{% endif %}
		{% if article.otherPic3 %}
			<button type="button" data-bs-target="#detailCarousel" data-bs-slide-to="1" aria-label="Slide 4"></button>
		{% endif %}

	</div>
	<div class="carousel-inner">
		<div class="carousel-item active" style=" height: 50vh;">
			<img src="{{asset('/uploads/ProductPictures/' ~ article.prezPicture)}}" class="d-block object-fit-cover h-100 w-100" alt="{{article.name}}">
		</div>
		{% if article.otherPic1 %}
			<div class="carousel-item">
				<img src="{{asset('/uploads/ProductPictures/' ~ article.otherPic1)}}" class="d-block object-fit-cover h-100 w-100" alt="{{article.name}}">
			</div>
		{% endif %}

		{% if article.otherPic2 %}
			<div class="carousel-item">
				<img src="{{asset('/uploads/ProductPictures/' ~ article.otherPic2)}}" class="d-block object-fit-cover h-100 w-100" alt="{{article.name}}">
			</div>
		{% endif %}
		{% if article.otherPic3 %}
			<div class="carousel-item">
				<img src="{{asset('/uploads/ProductPictures/' ~ article.otherPic3)}}" class="d-block object-fit-cover h-100 w-100" alt="{{article.name}}">
			</div>
		{% endif %}


	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#detailCarousel" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#detailCarousel" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
