{% extends 'base.html.twig' %}
{% block body %}
	<div class="container">
		<h1 class="text-center my-2">Boutique Adultes</h1>

		<ul class="nav nav-pills justify-content-center mb-3" id="pills-tab" role="tablist">
			<li class="nav-item" role="presentation">
				<button class="nav-link active text-secondary mx-2" id="adultShoes-tab" data-bs-toggle="pill" data-bs-target="#pills-adultShoes" type="button" role="tab" aria-controls="pills-adultShoes" aria-selected="true">Chaussures</button>
			</li>
			<li class="nav-item" role="presentation">
				<button class="nav-link text-secondary mx-2" id="adultVestes-tab" data-bs-toggle="pill" data-bs-target="#pills-adultVestes" type="button" role="tab" aria-controls="pills-adultVestes" aria-selected="false">Vestes</button>
			</li>
			<li class="nav-item" role="presentation">
				<button class="nav-link text-secondary mx-2" id="adultEnsembles-tab" data-bs-toggle="pill" data-bs-target="#pills-adultEnsembles" type="button" role="tab" aria-controls="pills-adultEnsembles" aria-selected="false">Ensembles</button>
			</li>
		</ul>
		<div class="tab-content" id="pills-tabContent">
			<div class="tab-pane fade show active" id="pills-adultShoes" role="tabpanel" aria-labelledby="adultShoes-tab">
				<div class="row row-cols-md-3 row-cols-sm-2 row-cols-2 row-cols-lg-4 mt-2">
					{% for article in adultShoes %}
						{% if article.available %}

							{% include "shop/_productCard.html.twig" %}

						{% endif %}

					{% endfor %}
				</div>
			</div>
			<div class="tab-pane fade" id="pills-adultVestes" role="tabpanel" aria-labelledby="adultVestes-tab">
				<div class="row row-cols-md-3 row-cols-sm-2 row-cols-2 row-cols-lg-4 mt-2">
					{% for article in adultVestes %}
						{% if article.available %}
							{% include "shop/_productCard.html.twig" %}
						{% endif %}
					{% endfor %}
				</div>
			</div>
			<div class="tab-pane fade" id="pills-adultEnsembles" role="tabpanel" aria-labelledby="adultEnsembles-tab">
				<div class="row row-cols-md-3 row-cols-sm-2 row-cols-2 row-cols-lg-4 mt-2">
					{% for article in adultEnsembles %}
						{% if article.available %}
							{% include "shop/_productCard.html.twig" %}
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
