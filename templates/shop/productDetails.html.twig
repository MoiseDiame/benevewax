{% extends 'base.html.twig' %}


{% block body %}

	<div class="card mb-3">
		<div class="card-img-top">
			{% include 'shop/_detailCarousel.html.twig' %}</div>
		<div class="card-body">
			<h5 class="card-title">{{article.name}}</h5>
			<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
			<p class="card-text">
				{% if article.assortiment %}
					{% include 'shop/_sizeSelectEnsembleProduct.html.twig' %}
				{% else %}
					{% include 'shop/_sizeSelectSimpleProduct.html.twig' %}
				{% endif %}
			</p>
		</div>
		<div class="card-footer">
			<button class="btn rounded btn-warning" type="submit" form="selectSizeForm">Ajouter au panier</button>
		</div>
	</div>
	{{dump(article)}}


{% endblock %}
