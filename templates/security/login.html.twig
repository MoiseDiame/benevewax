{% extends 'base.html.twig' %}

{% block title %}Authentification
{% endblock %}

{% block body %}
	<div class="row justify-content-center container mx-2">
		<div class="col-lg-6">
			<h1 class="h5 my-2 text-center">Page d'authentification
			</h1>
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connecté en tant que :
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}
				<div class="row justify-content-center ">
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-1" autocomplete="email" placeholder="Votre email" required autofocus></br>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control my-1" autocomplete="current-password" placeholder="Entrez votre mot de passe" required>
				<label>
					<input type="checkbox" name="_remember_me" checked/>
					Rester connecté
				</label>


				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


				<button class="btn btn-warning rounded-pill my-4" type="submit">
					Se connecter
				</button>
			</form>

		</div>
	</div>
</div>{% endblock %}
